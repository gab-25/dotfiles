syntax on

set nocompatible
set encoding=utf-8
set clipboard=unnamedplus
set number
set nobackup
set nowrap
set ignorecase
set smartcase
set showcmd
set showmode
set showmatch
set hlsearch
set incsearch

set expandtab
set shiftwidth=2
set softtabstop=2
set tabstop=2

autocmd FileType python setlocal shiftwidth=4 softtabstop=4 tabstop=4
